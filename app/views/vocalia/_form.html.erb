<%= form_for(@vocalium) do |f| %>
    <% if @vocalium.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@vocalium.errors.count, "error") %> prohibited this vocalium from being saved:</h2>

          <ul>
            <% @vocalium.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :nombre %>
      <br/>
      <%= f.text_field :nombre %>
    </div>
    <div class="field">
      <%= f.label :seccion_id %>
      <br/>
      <%= f.select("seccion_id", Seccion.all.collect { |s| [s.name, s.id] }, {:prompt => 'Seleccionar sección'}) %>
    </div>
    <div class="field">
      <%= f.label :resumen %>
      <br/>
      <%= f.text_area :resumen, :rows => 6 %>
    </div>
    <div class="field">
      <%= f.label :contenido %>
      <br/>
      <%= f.text_area :contenido %>
    </div>
    <div class="actions">
      <%= f.submit 'Crear vocalía' %>
    </div>
<% end %>
