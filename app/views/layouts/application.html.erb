<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>

  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= javascript_include_tag "application" %>

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
</head>
<body>
<% # Carga el Javascript sdk de facebook para poder habilitar las funciones sociales   %>

<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/es_LA/all.js#xfbml=1&appId=209301705863030";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<% if signed_in? %>
    <%= render 'layouts/actions_header' %>
<% end %>

<div class="container">
  <%= render 'layouts/header' %>

  <div class="cuerpo">

    <div class="menu">

      <div id="actual">
        <span><%= @actual %></span>
      </div>
      <div id="menus">
        <div id="menu_header">
          <ul>
            <% "Inicio,Noticias,Medios,Areas,Servicios,Portales".split(",").each do |modulo| %>
                <% if modulo != @title %>
                    <li> <%= link_to modulo, "/modulos/#{modulo.downcase}" %></li>
                <% end %>
            <% end %>
            <% f = image_tag "fb.png" %>
            <% tt = image_tag "tt.png" %>
            <li id="tt"><%= link_to tt, "http://twitter.com/caipuc/" %></li>
            <li id="fb"><%= link_to f, "http://www.facebook.com/groups/98863310124/" %></li>

          </ul>
        </div>
        <% if @submenu %>
            <div id="sub_menu_header">
              <%= render "layouts/menu/secciones_#{@submenu.downcase}" %>
            </div>
        <% end %>

      </div>

    </div>

    <%= yield %>

    <div class="lateral">
      <%= render "layouts/sidebar/eventos" %>
      <%= render "layouts/sidebar/comentado" %>
      <%= render "layouts/sidebar/favoritos" %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>

<%= debug(params) if Rails.env.development? %>


</body>

</html>


