<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>


  <% if mobile_device? %>
      <%= stylesheet_link_tag 'mobile' %>
  <% else %>
      <%= stylesheet_link_tag "application", :media => "all" %>
  <% end %>


  <%= javascript_include_tag "application" %>

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Droid+Serif' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" type="image/png" href="/favicon.ico"/>
</head>
<body>
<% # Carga el Javascript sdk de facebook para poder habilitar las funciones sociales     %>

<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s);
    js.id = id;
    js.src = "//connect.facebook.net/es_ES/all.js#xfbml=1&appId=209301705863030";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<% if signed_in? %>
    <%= render 'layouts/actions_header' %>
<% end %>

<div class="container">
  <header>
    <%= render 'layouts/header' %>
    <%= render 'layouts/menu' %>
  </header>
  <div class="cuerpo">


    <%= yield %>

    <div class="lateral">
      <%= render "layouts/sidebar/eventos" %>
      <%= render "layouts/sidebar/comentado" %>
      <%= render "layouts/sidebar/favoritos" %>
    </div>
  </div>
  <%= render 'layouts/footer' %>
</div>

<%= debug(params) if Rails.env.development? %>


</body>

</html>


