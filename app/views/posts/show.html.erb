
<div class = "contenido">
  <div class="columna">
	<div class = "post">	
		<%= render 'layouts/error_flash'%>
		<%= image_tag @post.avatar.url(:grande) %>
        <div class="fb-like" data-href="http://cai2012.heroku.com/posts/<%="#{@post.id}" %>" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false"></div>
		<h2><%= @post.titulo%> </h2>
		<p><%= @post.contenido%></p>


	</div>
    <div class = "post">
      <div class="fb-comments" data-href="http://cai2012.heroku.com/posts/<%="#{@post.id}"%>" data-num-posts="5" data-width="590"></div>
    </div>
  </div>
	<div class = "meta-post">
      <p>Publicado hace <%= time_ago_in_words(@post.created_at) %></p>
		<p>Autor: <%= @ingeniero.name %></p>
	</div>
</div>

