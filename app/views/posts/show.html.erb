<div class="contenido">
  <div class="columna">
    <div class="post">
      <%= render 'layouts/error_flash' %>
      <% if !@post.impulso_link.nil?  && @post.impulso_link.length > 10 %>
          <%= @post.impulso_link.html_safe %>
      <% elsif !@post.youtube_link.nil? %>
          <iframe width="590" height="315" src="http://www.youtube.com/embed/<%= @post.youtube_link %>" frameborder="0" allowfullscreen></iframe>
      <% else %>
          <%= image_tag @post.avatar.url(:grande) %>
      <% end %>

      <div class="fb-like" data-href="http://2012.cai.cl/posts/<%= "#{@post.id}" %>" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false"></div>
      <h2><%= @post.titulo %> </h2>

      <p><%= @post.contenido %></p>


    </div>
    <div class="post">
      <div class="fb-comments" data-href="http://2012.cai.cl/posts/<%= "#{@post.id}" %>" data-num-posts="5" data-width="590"></div>
    </div>
  </div>

  <div class="meta-post">
    <p>Publicado hace <%= time_ago_in_words(@post.created_at) %></p>

    <p>Autor: <%= @ingeniero.name %></p>
  </div>
</div>



