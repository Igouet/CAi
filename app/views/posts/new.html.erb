<div class="contenido">
  <div class="izquierda">
    <h1>Publicar noticia</h1>

    <%= form_for @post, :html => {:multipart => true} do |f| %>

        <%= render 'shared/error_messages', :object => f.object %>

        <div class="field">
          <%= f.label :titulo, "Título" %>
          <br/>
          <%= f.text_field :titulo %>
        </div>
        <div class="field">
          <%= f.label :seccion_id %>
          <br/>
          <%= f.select("seccion_id", Seccion.all.collect { |s| [s.name, s.id] }, {:prompt => 'Seleccionar sección'}) %>
        </div>
        <div class="field">
          <%= f.label :resumen %>
          <br/>
          <%= f.text_area :resumen, :rows => 6 %>
        </div>
        <div class="field">
          <%= f.label :contenido %>
          <br/>
          <%= f.text_area :contenido %>
        </div>
        <div class="field">
          <%= f.label :avatar, "Imagen principal (590x250acppc)" %>
          <br/>
          <%= f.file_field :avatar %>
        </div>
        <div class="actions">
          <%= f.submit "Publicar" %>
        </div>

    <% end %>
  </div>

</div>