<% if object.errors.any?%>
	<div id = "error_explanation">
		<h2><%= pluralize(object.errors.count, "error")%>
		impidieron completar el registro:</h2>
		<p>Hay problemas en los campos siguientes:</p>
		<ul>
			<% object.errors.full_messages.each do |msg|%>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>