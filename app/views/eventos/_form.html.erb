<%= form_for @evento, :html => {:multipart => true} do |f| %>

    <%= render 'shared/error_messages', :object => f.object %>

    <div class="field">
      <%= f.label :name, "Nombre" %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :seccion_id, "Sección" %>
      <br/>
      <%= f.select("seccion_id", Seccion.all.collect { |s| [s.name, s.id] }, {:prompt => 'Seleccionar sección'}) %>
    </div>
    <div class="field">
      <%= f.label :descripcion, "Descripción" %>
      <br/>
      <%= f.text_area :descripcion, :rows => 6 %>
    </div>
    <div class="field">
      <%= f.label :fecha, "Fecha de inicio" %>
      <br/>
      <%= f.datetime_select :fecha %>
    </div>
    <div class="field">
      <%= f.label :termino, "Fecha de término" %>
      <br/>
      <%= f.datetime_select :termino %>
    </div>

    <div class="field">
      <%= f.label :lugar_id, "Lugar" %>
      <br/>
      <%= f.select("lugar_id", Lugar.all.collect { |l| [l.nombre, l.id] }, {:prompt => 'Seleccionar lugar'}) %>
    </div>

    <div class="actions">
      <%= f.submit "Listo" %>
    </div>

<% end %>